<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/progress_horizontal_welcome"
        app:layout_constraintStart_toStartOf="@+id/progress_horizontal_welcome" />

    <ProgressBar
        android:id="@+id/progress_horizontal_welcome"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="40dp"
        android:progress="22"
        android:progressDrawable="@drawable/dra_pb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>